#include <iostream>

int main()
{
	int cp, sp;

	printf("Enter the cost price\n");
	scanf_s("%d", &cp);

		printf("Enter the selling price of the product\n");
	scanf_s("%d", &sp);

	if (sp > cp)
	{
		printf("Your profit is %d\n", (sp - cp));
	}
	else if (cp > sp)
	{
		printf("Loss is %d\n", (cp - sp));
	}
	else
	{
		printf("Neither profit, nor loss\n ");
	}
}
